<form method="POST" data-abide novalidate>
    <div class="grid-x grid-margin-x">
        <div class="cell">
            <div data-abide-error class="alert callout" style="display: none;">
                <p><i class="fi-alert"></i> Il y a quelques erreurs dans votre formulaire.</p>
            </div>
        </div>
    </div>
    <fieldset class="fieldset">
        <legend>Ajouter votre message</legend>
        <p>
            <label>Titre
                <input type="text" placeholder="Saisir le titre du message" name="title" required/>
                <span class="form-error">Le champ titre est obligatoire</span>
            </label>
        </p>
        <p>
            <label>Message
                <textarea rows="3" placeholder="Saisir le contenu du message" name="content" required></textarea>
                <span class="form-error">Le champ contenu est obligatoire</span>
            </label>
        </p>
        <p class="align-middle">
            <button type="submit" class="button float-left">Valider</button>
            <button type="reset" class="button float-right reset">Reset</button>
        </p>
    </fieldset>
</form>
